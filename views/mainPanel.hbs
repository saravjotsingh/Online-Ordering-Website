<div class="container">
  <h1 class="text-center" id="title">Welcome to Cafeteria</h1><br>
  <hr>

  <div class="row" id="mainPanel">
    <div class="col-sm-4" id="selectData" style="position:fixed;height:100%;overflow-y:auto;">
      <label for="">Category</label>
      <select name="category" class="form-control" id="category" style="width:40%">
        <option value="all">All</option>
        <option value="Starters">Starters</option>
        <option value="Lunch">Lunch</option>
        <option value="Breakfast">Breakfast</option>
        <option value="Dinner">Dinner</option>
      </select><br>
      <input type="text" name="dishSearch" id="dishSearch" class="form-control" placeholder="Search Dish">

    </div>

    <div class="col-sm-8" style="margin-left:35%">
      <div class="row text-center" style="font-weight:bold">
        <div class="col-sm-4">
          <p>Name</p>
        </div>
        <div class="col-sm-4">
          <p>Price</p>
        </div>
      </div>
        {{#each data}}
        <div id="dishData" class="row text-center {{course}}">
          <div class="col-sm-4" id="nameData">
            <p>{{dishName}}</p>

          </div>
          <div class="col-sm-4" id="priceData">
            <p>â‚¹ {{price}}</p>
          </div>
          <div class="col-sm-4">
            <button type="button" value="{{dishName}}" data-value={{price}} class="btn btn-default addToCart" id="add" name="button">Add</button><br>
          </div>
        </div>
        {{/each}}
      </div>

  </div>

