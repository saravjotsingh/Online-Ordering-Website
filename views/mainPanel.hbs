<head>
  <title>Cafeteria</title>
  <link rel="stylesheet" href="css/mainPanel.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body id="body">
<div class="container">
  <h1 class="text-center" id="title">Welcome to Cafeteria</h1><br>
  <button class="btn btn-link" id="starters" type="button" name="button">Starters</button>
  <button class="btn btn-link" id="lunch" type="button" name="button">Lunch</button>
  <button class="btn btn-link" id="breakfast" type="button" name="button">Breakfast</button>
  <button class="btn btn-link" id="dinner" type="button" name="button">Dinner</button>
  <button class="btn btn-link"  id="all" type="button" name="button">All</button>
  <button  class="btn btn-default" style="text-align:right" id="checkout" type="button" name="button">Checkout</button>
  <a  href="/logout" class="btn btn-default">Logout</a>
    <div class="row text-center" style="font-weight:bold">
      <div class="col-sm-4" >
        <p>Name</p>
      </div>
      <div class="col-sm-4">
        <p>Price</p>
      </div>
      <div class="col-sm-4">

      </div>
    </div>
    {{#each data}}
    <div id="dishData" class="row text-center {{course}}">
      <div class="col-sm-4" id="nameData">
        <p>{{dishName}}</p>
      </div>
      <div class="col-sm-4" id="priceData">
        <p>â‚¹ {{price}}</p>
      </div>
      <div class="col-sm-4">
        <button type="button" value="{{dishName}}" data-value={{price}} class="btn btn-success  addToCart" name="button">Add to Order</button><br>
      </div>
    </div>
    {{/each}}

<script type="text/javascript" src="js/mainPanel.js"></script>
</body>
