  <button class="btn btn-default" id="lunch" type="button" name="button">Lunch</button>
  <button class="btn btn-default" id="breakfast" type="button" name="button">Breakfast</button>
  <button class="btn btn-default" id="dinner" type="button" name="button">Dinner</button>
  <button class="btn btn-default"  id="all" type="button" name="button">All</button>
  <button  class="btn btn-default" id="checkout" type="button" name="button">Checkout</button>
    <div class="row text-center bold">
      <div class="col-sm-3">
