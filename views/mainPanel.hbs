        <li><button  class="btn btn-default btn-sm" style="text-align:right" id="checkout" type="button" name="button">Checkout <span style="background-color:red;color:white;border-radius:5px;padding:3px;display:none" id="CheckoutText"><span></button></li>
      </ul>
