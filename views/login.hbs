<html>
<head>
    <title>Online Ordering</title>
    <meta charset="utf-8">
</head>
<link rel="stylesheet" href="css/login.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">

<body id="LoginBody">


    <div class="container" id="login">
      <h2 id="title"><b>Cafeteria Student Login</b></h2>
      <hr style="width:60%;border-color:black">
      <div class="text-center">
        {{#if messages}}
          <div class="alert alert-danger" id="errorMessage">{{messages}}</div>
        {{/if}}
      </div>

        <div class="form-group">
            <form method="post" action="/login">
                <Label>Roll No.</Label><br>
                <input type="text" class="form-control" name="lUsername" placeholder="Enter Roll No" required><br>
                <Label>Password</Label><br>
                <input type="password" class="form-control" name="lPassword" placeholder="Enter Password" required><br><br>
                <button class="btn btn-success">Login</button><br>
                <p><b>New Here?<a href="/register">Register now</a></b></p>
        </div>
        </form>

    </div>

    <!-- <script src="js/login.js"></script> -->

</body>


</html>
